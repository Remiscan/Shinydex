{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "command": "tsc.cmd",
      "problemMatcher": ["$tsc"],
      "label": "compile to JS",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }, {
      "type": "shell",
      "command": "deno run --allow-run --allow-read --allow-write=./modules build/auto.build.js",
      "label": "[auto] compile to JS on file change",
      "runOptions": {
        "runOn": "folderOpen"
      },
      "presentation": {
        "reveal": "silent"
      }
    }
  ]
}