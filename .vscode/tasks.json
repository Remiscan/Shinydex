{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "command": "tsc --incremental",
      "problemMatcher": ["$tsc"],
      "label": "compile to JS",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }, {
      "type": "deno",
      "command": "run",
      "args": [
        "--allow-run", "--allow-read", "--allow-write=./modules", "build/auto.build.js"
      ],
      "label": "[auto] compile to JS on file change",
      "runOptions": {
        "runOn": "folderOpen"
      },
      "presentation": {
        "reveal": "silent"
      }
    }, {
      "type": "deno",
      "command": "run",
      "args": [
        "--allow-run", "--allow-read", "--allow-env", "--allow-sys", "build/test.ts"
      ],
      "label": "run tests with mocha"
    }
  ]
}