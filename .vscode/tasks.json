{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "command": "tsc --incremental",
      "problemMatcher": ["$tsc"],
      "label": "compile to JS",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }, {
      "type": "deno",
      "command": "run",
      "args": [
        "--allow-run", "--allow-read", "--allow-write=./modules", "build/auto.build.js"
      ],
      "label": "[auto] compile to JS on file change",
      "runOptions": {
        "runOn": "folderOpen"
      },
      "presentation": {
        "reveal": "silent"
      }
    }, {
      "type": "shell",
      "command": "sudo php build/webp-pokemon-sprites.php",
      "label": "build .webp Pokémon sprites"
    }, {
      "type": "shell",
      "command": "sudo php build/pokemonsheet.php",
      "label": "build Pokémon sprite sheet"
    }, {
      "type": "shell",
      "command": "sudo php build/iconsheet.php",
      "label": "build icon sheet"
    }, {
      "type": "shell",
      "command": "sudo php build/pokemon-data.php",
      "label": "build Pokémon data JSON"
    }, {
      "type": "shell",
      "command": "bash -ic deno --version",
      "label": "test deno in task"
    }
  ]
}